<% sites.each do|site|%>
<li class="span3">
  <div class="thumbnail">
    <%=link_to site.url, :target => '_blank' do %>
      <%=image_tag image_site_path site %>
    <% end %>
    <h5><%=site.name%></h5>
    <p>
      <%=truncate(site.description, :length => 100)%>
      <%=link_to 'more...', site_path(site)%>
    </p>
  </div>
</li>
<% end %>
